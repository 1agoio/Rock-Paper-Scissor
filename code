    <script>
        
            
            //defining variables
            let playerChoice;
            let draw = false;
            let playerWin = false;
            let computerWin = false;
            let playerWins = 0;
            let computerWins = 0;
            let draws = 0;
            let playerToPlay = true;
            let rock = false;
            let paper = false;
            let scissors = false;
            function playerPlay(){
                function rock(){
                    rock = true;
                    playerToPlay = false;
                }
                function scissors(){
                    scissors = true;
                    playerToPlay = false;
                }
                function paper(){
                    paper = true;
                    playerToPlay = false;
                }
            }
        function RPS(){
            //player decision
            
            //making sure the games only runs if the player makes a choice
            if(playerChoice !== null){
                //make the player choice be case sensitive
                let playerChoiceLow;
                //variables for the random option of the computer
                let computerChoice = '';
            let min = 0;
            let max = 3;
            let difference = max - min;
            let rand = Math.random();
            rand = Math.floor( rand * difference);
        rand = rand + min;
            
            //console.log(playerChoiceLow);

       function computerPlay() {
        if(playerToPlay === false){
        //console.log(rand);
                //computer making a choice
        if (rand === 0){
        computerChoice = 'rock';
        console.log('computer chose rock');
        playerToPlay = true;
        //console.log(rand);
        } else if (rand === 1) {
        computerChoice = 'paper';
        console.log('computer chose paper');
        playerToPlay = true;
        //console.log(rand);
        } else if (rand === 2){
        computerChoice = 'scissors';
        console.log('computer chose scissors');
        playerToPlay = true;
        //console.log(rand);
        } else console.log('something went wrong here');
        console.log(computerChoice);
        playerToPlay = true;
    }
}
        //check who won the game
    

        function checkWinner(){
            if(playerChoiceLow == computerChoice){
                alert("it's a draw");
                draw = true;
                draws++;
            } else if(playerChoiceLow === 'rock' && computerChoice === 'scissors'){
                alert('You win');
                playerWin = true;
            } else if(playerChoiceLow === 'paper' && computerChoice === 'rock'){
                alert('You win');
                playerWin = true;
            } else if(playerChoiceLow === 'scissors' && computerChoice === 'paper'){
                alert('You win');
                playerWin = true;
            } else if(playerChoiceLow === 'scissors' && computerChoice === 'rock'){
                alert('You lost');
                computerWin = true;
            } else if(playerChoiceLow === 'rock' && computerChoice === 'paper'){
                alert('You lost');
                computerWin = true;
            } else if(playerChoiceLow === 'paper' && computerChoice === 'scissors'){
                alert('You lost');
                computerWin = true;
            } 
        }
        //points system
        function matches(){
            if(playerWin){
                playerWins++;
                playerWin = false;
                alert("player won :" , playerWins , "times" );
                RPS();
            } else if (computerWin){
                computerWins++;
                computerWin = false;
                alert("computer won :" , computerWins, "times");
                RPS();
            } else if(draw){
                
                console.log('game tied', draws , 'times' );
                RPS();
            }
        }
        
        }
        else {
            //checking if the game is not played
                console.log('game cancelled');
                function checkWinner(){

